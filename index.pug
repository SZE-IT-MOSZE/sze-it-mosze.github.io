        div(class="container")
            div(class="row")                
                div(class="col")
                    include info_card.pug
                div(class="col-10")
                    h4(id="generalinf") Általános
                        p
                    h4(id="eduinf") Oktatási információk
                        include eduinf.pug
                    h4(id="hhalloffame") Dicsőségcsarnok
                    div(class="carousel slide" id="halloffame")
                        div(class="carousel-inner" id="hallofffame-inner")
                            div(class="carousel-item active")
                                div(class="container")
                                    h5 2023
                                    include best_2023.pug
                            // 2022
                            div(class="carousel-item")
                                div(class="container")
                                    h5 2022
                                    include best_2022.pug
                    button(class="carousel-control-prev" type="button" data-bs-target="#halloffame" data-bs-slide="prev")
                        span(class="carousel-control-prev-icon")
                        span(class="visually-hidden") Previous
                    button(class="carousel-control-next" type="button" data-bs-target="#halloffame" data-bs-slide="next")
                        span(class="carousel-control-next-icon")
                        span(class="visually-hidden") Next
